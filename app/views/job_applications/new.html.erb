<%= form_for @job_application do |f| %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.collection_select :job_posting_id, JobPosting.all, :id, :company %>

</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

